{
  "manifest_version": 3,
  "name": "VBTV Player Enhancement",
  "version": "1.0",
  "description": "Enhances VBTV player with YouTube-like shortcuts and interface modifications",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://tv.volleyballworld.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
